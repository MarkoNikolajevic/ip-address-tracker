{
  "name": "ip-address-tracker",
  "version": "1.0.0",
  "description": "Ip address tracker made following front end mentor",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass --output-style compressed -o dist/style/css src/style/sass",
    "autoprefixer": "postcss -u autoprefixer -r dist/style/css/*",
    "serve": "browser-sync start --server --files 'dist/style/css/*.css'",
    "build:css": "npm run sass && npm run autoprefixer",
    "watch:css": "onchange 'src/style/sass/*.sass' -- npm run build:css"
  },
  "keywords": [],
  "author": "Marko Nikolajevic",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "node-sass": "^7.0.1",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0"
  }
}
